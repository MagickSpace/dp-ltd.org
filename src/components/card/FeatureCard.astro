---
// Astro Imports - Globals
import { Image } from 'astro:assets'

// Props type
type Props = {
  name: {
    uk: string
    en: string
    ru: string
    es: string
    fr: string
    de: string
    pl: string
  }
  image: ImageMetadata
  text: {
    uk: string
    en: string
    ru: string
    es: string
    fr: string
    de: string
    pl: string
  }
}

// Translation Imports
import { getLangFromUrl } from '@/i18n/utils'
const lang = getLangFromUrl(Astro.url)

// Astro Props
const { name, image, text } = Astro.props
---


<div class="w-full px-4 md:w-1/2 lg:w-1/3">
    <div class="mb-9 rounded-[20px] bg-background-card leading-none transition-colors duration-200 hover:shadow-neon-yellow p-10 shadow-2 hover:shadow-lg md:px-7 xl:px-10">
        <div class="bg-primary mb-8 flex h-[70px] w-[70px] items-center justify-center rounded-2xl">
        <div class="wrap items-center justify-center">
                <div class="circle items-center justify-center">
                  <Image src={image} width={36} height={36} alt={`Avatar ${name}`} />
                </div>
              </div> 
        </div>
        <h2>{name[lang]}</h2>
        <p class="p-6 pt-0">{text[lang]}</p>
    </div>  
</div>

<style>
  .wrap {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 15vh;
  }

  .circle {
    background: #222222;
    width: 100px;
    height: 100px;
    border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%;
    overflow: hidden;
    animation: morph 3s linear infinite;
  }

  .circle img {
    width: 100%;
  }

  @keyframes morph {
    0%,
    100% {
      border-radius: 40% 60% 70% 30% / 40% 40% 60% 50%;
    }
    34% {
      border-radius: 70% 30% 50% 50% / 30% 30% 70% 70%;
    }
    67% {
      border-radius: 100% 60% 60% 100% / 100% 100% 60% 60%;
    }
  }
</style>